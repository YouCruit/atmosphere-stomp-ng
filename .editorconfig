root = true

[*]
max_line_length=500
charset=utf-8
end_of_line=lf
insert_final_newline=false
indent_style=space
indent_size=4
tab_width=8
trim_trailing_whitespace=true
curly_bracket_next_line=false
indent_brace_style=K&R
wildcard_import_limit=0
continuation_indent_size=4

[{*.sht,*.html,*.shtm,*.shtml,*.htm,*.vm}]
indent_style=space
indent_size=2

[{*.js}]
indent_style=space
indent_size=2

[{*.scss}]
indent_style=space
indent_size=2

[{*.svg}]
indent_style=space
indent_size=2
